<Window x:Class="Vending.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vending"
        mc:Ignorable="d"
        Title="Password" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="10" FontSize="20">Пароль</TextBlock>
            <TextBox Width="200" Margin="10" x:Name="pass" FontSize="20"></TextBox>
            <Button Click="Button_Click" Margin="10" FontSize="20">OK</Button>
        </StackPanel>
    </Grid>
</Window>
